  "dependencies": {
    "bignumber.js": "^7.2.1",
    "ethers": "^4.0.7",
    "ethjs-provider-http": "^0.1.6",
    "ethjs-rpc": "^0.2.0",
    "truffle": "^5.0.22"
  },
  "devDependencies": {
    "truffle-hdwallet-provider": "0.0.3",
