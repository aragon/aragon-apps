{
  "name": "@aragon/future-apps-payroll",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "app",
    "aragon",
    "dao",
    "payroll"
  ],
  "license": "(GPL-3.0-or-later OR AGPL-3.0-or-later)",
  "author": "Aragon Institution MTU <contact@aragon.one>",
