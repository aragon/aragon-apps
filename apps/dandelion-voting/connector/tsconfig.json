{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules", "subgraph", "**/__test__/**"]
}
