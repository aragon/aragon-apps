    "@aragon/truffle-config-v4": "^1.0.1",
    "eth-gas-reporter": "^0.2.0",
    "ethereumjs-testrpc-sc": "^6.5.1-sc.0",
    "ganache-cli": "^6.4.3",
    "solidity-coverage": "0.6.2",
    "solium": "^1.2.3",
    "truffle": "4.1.14",
    "truffle-extract": "^1.2.1"
  },
  "dependencies": {
    "@aragon/apps-shared-minime": "1.0.0",
    "@aragon/os": "4.2.0"
