{
  "devDependencies": {
    "coveralls": "^2.13.1",
    "lcov-result-merger": "^1.2.0",
    "lerna": "^2.4.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --nohoist=@aragon/core",
    "test": "lerna run --scope=@aragon/apps-* test",
    "lint": "lerna run --scope=@aragon/apps-* lint",
    "coverage": "lerna run --scope=@aragon/apps-* --concurrency=1 --stream coverage",
    "coverage:parity": "GETH_CLIENT=parity lerna run --scope=@aragon/apps-* --concurrency=1 --stream coverage",
    "coverage:geth": "GETH_CLIENT=geth lerna run --scope=@aragon/apps-* --concurrency=1 --stream coverage"
  }
}
